{
    "compilerOptions": {
        "target": "ESNext",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "module": "commonjs",
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "paths": {
            "@plone/volto/*": [
                "../node_modules/@plone/volto/src/*",
                "../node_modules/@plone/volto/types/*"
            ],
            "@root/*": [
                "."
            ],
            "@eeacms/volto-climate-advisory-board-policy": [
                "addons/volto-climate-advisory-board-policy/src"
            ],
            "@eeacms/volto-newsletter-block": [
                "addons/volto-newsletter-block/src"
            ],
            "@eeacms/volto-eea-website-theme": [
                "addons/volto-eea-website-theme/src"
            ]
        },
        "baseUrl": "src"
    }
}